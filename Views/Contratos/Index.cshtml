@model IEnumerable<inmobiliariaPestchanker.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<h1>Listado de Contratos</h1>

<p>
    <a asp-action="Create">Nuevo Contrato</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Dirección Inmueble
            </th>
            <th>
                Inquilino
            </th>
            <th>
                Inicio Contrato
            </th>
            <th>
                Fin Contrato
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Inmueble.Direccion)
            </td>
            <td>
                @(item.Inquilino.Apellido + ", " + item.Inquilino.Nombre)
            </td>
            <td>
                @(item.FechaInicio.ToString().Substring(0,10))
            </td>
            <td>
                @(item.FechaFin.ToString().Substring(0,10))
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new  { id=item.Id}) |
                @Html.ActionLink("Detalles", "Details", new  { id=item.Id}) |
                @Html.ActionLink("Borrar", "Delete", new  { id=item.Id}) |
                @Html.ActionLink("Pagos", "Index", "Pagos", new  { idContrato=item.Id}) |
                @Html.ActionLink("Pagar", "Create", "Pagos", new  { idContrato=item.Id}) |
                @Html.ActionLink("Terminar", "Terminar", new  { id=item.Id}) |
                @Html.ActionLink("Renovar", "Renovar", new  { id=item.Id})
                
                </td>
        </tr>
}
    </tbody>
</table>
