@model inmobiliariaPestchanker.Models.Contrato

@{
    ViewData["Title"] = "Terminar";
    var inmuebles = (IList<Inmueble>)ViewBag.Inmueble;
    var inquilinos = (IList<Inquilino>)ViewBag.Inquilino;
    var saldoDeuda = (Decimal)ViewBag.SaldoDeuda;
    var mora = (Decimal)ViewBag.Mora;    
}

<h1>Terminar</h1>

<h4>Contrato</h4>
<hr />

<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Dirección
        </dt>
        <dd class = "col-sm-10">
            @(Model.Inmueble.Direccion)
        </dd>
        <dt class = "col-sm-2">
            Inquilino
        </dt>
        <dd class = "col-sm-10">
            @(Model.Inquilino.Apellido + ", " + Model.Inquilino.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Fecha Inicio Contrato
        </dt>
        <dd class = "col-sm-10">
            @(Model.FechaInicio.ToString().Substring(0,10))
        </dd>
        <dt class = "col-sm-2">
            Fecha Fin Contrato
        </dt>
        <dd class = "col-sm-10">
            @(Model.FechaFin.ToString().Substring(0,10))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        
        <dt class = "col-sm-2">
            Mora
        </dt>
        <dd class = "col-sm-10">
            @mora
        </dd>
        <dt class = "col-sm-2">
            Saldo Deuda
        </dt>
        <dd class = "col-sm-10">
            @saldoDeuda
        </dd>
        


    </dl>
</div>
<div>
    @Html.ActionLink("Terminar", "TerminarDefinitivo", new { id = Model.Id}) |
    <br>
    <a asp-action="Index">Volver</a>
</div>

