@model inmobiliariaPestchanker.Models.Contrato

@{
    ViewData["Title"] = "Borrar";
     var inmueble = (Inmueble)ViewBag.Inmueble;
     var inquilino = (Inquilino)ViewBag.Inquilino;
}

<h1>Delete</h1>

<h3>Está seguro de querer borrar este contrato?</h3>
<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Dirección
        </dt>
        <dd class = "col-sm-10">
            @(inmueble.Direccion)
        </dd>
        <dt class = "col-sm-2">
            Inquilino
        </dt>
        <dd class = "col-sm-10">
            @(inquilino.Apellido + ", " + inquilino.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Inicio
        </dt>
        <dd class = "col-sm-10">
             @(Model.FechaInicio.ToString().Substring(0,10))
        </dd>
        <dt class = "col-sm-2">
            Fecha de Fin 
        </dt>
        <dd class = "col-sm-10">
             @(Model.FechaFin.ToString().Substring(0,10))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista de Contratos</a>
    </form>
</div>
