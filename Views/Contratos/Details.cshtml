@model inmobiliariaPestchanker.Models.Contrato

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles de Contratos</h1>

<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Dirección
        </dt>
        <dd class = "col-sm-10">
            @(Model.Inmueble.Direccion)
        </dd>
        <dt class = "col-sm-2">
            Inquilino
        </dt>
        <dd class = "col-sm-10">
            @(Model.Inquilino.Apellido + ", " + Model.Inquilino.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Fecha Inicio Contrato
        </dt>
        <dd class = "col-sm-10">
            @(Model.FechaInicio.ToString().Substring(0,10))
        </dd>
        <dt class = "col-sm-2">
            Fecha Fin Contrato
        </dt>
        <dd class = "col-sm-10">
            @(Model.FechaFin.ToString().Substring(0,10))
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Volver a la Lista de Contratos</a>
</div>
