@model inmobiliariaPestchanker.Models.Clave

@{
    ViewData["Title"] = "Cambio de Clave";
}

<h1>Cambio de Clave</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" type = "hidden" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveAnterior" class="control-label"></label>
                <input asp-for="ClaveAnterior" class="form-control" />
                <span asp-validation-for="ClaveAnterior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClaveNueva" class="control-label"></label>
                <input asp-for="ClaveNueva" class="form-control" />
                <span asp-validation-for="ClaveNueva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar Cambio" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
@Html.ActionLink("Volver a Lista de Usuarios", "Index", "Usuarios")
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
