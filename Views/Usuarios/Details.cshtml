@model inmobiliariaPestchanker.Models.Usuario

@{
    ViewData["Title"] = "Detalles";
     var rol = (Rol)ViewBag.rol;
       var Miemail = User.Identity.Name;
        var RolAdmin = User.IsInRole("Administrador");
}

<h1>Detalles de Usuario</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class = "col-sm-10">
           <img width="32" src="@Model.Avatar"/>
        </dd>
        
        
        <dt class = "col-sm-2">
            Rol
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => rol.Descripcion)
        </dd>
    
    
    
    </dl>
</div>
<div>
     @if(RolAdmin || Miemail==Model.Email)
   {@Html.ActionLink("Edit", "Edit", new { id = Model.Id })} 
    <br>|
    <a asp-action="Index">Volver a Lista de Usuarios</a>
</div>
