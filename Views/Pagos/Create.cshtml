@model inmobiliariaPestchanker.Models.PagoLista

@{
    ViewData["Title"] = "Create";
}

<h1>Pago</h1>
    
<h4>Información del Contrato &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;Ingresar Nuevo Pago</h4>
<hr />

<div class="row">
   
   
    <div class="col-md-4">  
   
        <div>
                Código de Contrato: 
                @(Model.IdContrato)
        </div>
        
        <div>
                Nombre del Inquilino: 
                @(Model.InqApellido + ", "+ Model.InqNombre)
        </div>

        <div>
                Nombre del Propietario: 
                @(Model.PropApellido + ", "+ Model.PropNombre)
        </div>
        
        <div>
                Fecha Inicio: 
                @(Model.FechaInicioContrato.ToString().Substring(0,10))
        </div>

        <div>
                Fecha Finalización: 
                @(Model.FechaFinContrato.ToString().Substring(0,10))
        </div>

        <div>
                Importe a Pagar: $ 
                @(Model.PrecioContrato)
        </div>
    </div>



    <div class="col-md-4">
            <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    Importe Abonado
                    <input asp-for="Importe" class="form-control" />
                    <span asp-validation-for="Importe" class="text-danger"></span>
                </div>
    
                <div class="form-group">
                    Fecha de Pago
                    <input asp-for="FechaPago" class="form-control" />
                    <span asp-validation-for="FechaPago" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <input asp-for="IdContrato" class="form-control" type="hidden" />
                    <span asp-validation-for="IdContrato" class="text-danger" /></span>
                </div>
    
                <div class="form-group">
                    <input type="submit" value="Registrar" class="btn btn-primary" />
                </div>
            </form>

   
   
</div>




</div>

<div>
    <a asp-controller="Contratos" asp-action="Index">Volver a Lista de Contratos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
